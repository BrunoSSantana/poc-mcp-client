{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@app/*": ["src/app/*"],
      "@interface/*": ["src/interface/*"],
      "@infra/*": ["src/infra/*"],
      "@/*": ["src/*"]
    },
    "moduleResolution": "NodeNext"
  },
  "include": ["src/**/*"]
}
